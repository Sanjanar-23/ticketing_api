<!DOCTYPE html>
<html>
<head>
  <title>Ticketing</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
          <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
          <%= stylesheet_link_tag "application", media: "all" %>
          <%= stylesheet_link_tag "sidebar", media: "all" %>
</head>
        <body>
          <!-- Sidebar Overlay (for mobile) -->
          <div id="sidebar-overlay" class="sidebar-overlay"></div>

        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
          <div class="sidebar-header">

            <button class="sidebar-close" onclick="toggleSidebar()">
              <i class="fas fa-times"></i>
            </button>
          </div>

          <div class="sidebar-content">
            <div class="sidebar-section">
              <h6 class="sidebar-title">Navigation</h6>
              <ul class="sidebar-menu">
                <li><%= link_to root_path, class: 'sidebar-link' do %><i class="fas fa-tachometer-alt"></i> Dashboard<% end %></li>
                <li><%= link_to tickets_path, class: 'sidebar-link' do %><i class="fas fa-ticket-alt"></i> Tickets<% end %></li>
                <li><%= link_to companies_path, class: 'sidebar-link' do %><i class="fas fa-building"></i> Companies<% end %></li>
                <li><%= link_to contacts_path, class: 'sidebar-link' do %><i class="fas fa-users"></i> Contacts<% end %></li>
              </ul>
            </div>

            <div class="sidebar-section">
              <h6 class="sidebar-title">Settings</h6>
              <ul class="sidebar-menu">
                <li><a href="#" class="sidebar-link"><i class="fas fa-cog"></i> General Settings</a></li>
                <li><a href="#" class="sidebar-link"><i class="fas fa-user-cog"></i> Profile</a></li>
                <li><a href="#" class="sidebar-link"><i class="fas fa-bell"></i> Notifications</a></li>
                <li><a href="#" class="sidebar-link"><i class="fas fa-shield-alt"></i> Security</a></li>
              </ul>
            </div>
          </div>

          <div class="sidebar-footer">
            <% if user_signed_in? %>
              <div class="user-info">
                <div class="user-avatar">
                  <%= current_user.name&.first&.upcase || 'U' %>
                </div>
                <div class="user-details">
                  <div class="user-name"><%= current_user.name %></div>
                  <div class="user-email"><%= current_user.email %></div>
                </div>
              </div>
              <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-outline-light w-100' %>
            <% else %>
              <div class="auth-buttons">
                <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-sm btn-success w-100 mb-2' %>
                <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-sm btn-outline-light w-100' %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Main Content -->
        <div class="main-content" id="main-content">
          <div class="navbar">
            <div class="navbar-left d-flex align-items-center">
              <!-- Sidebar Toggle Button -->
              <button class="sidebar-toggle" onclick="toggleSidebar()">
                <i class="fas fa-bars"></i>
              </button>
              <div class="brand">
                <a href="/" style="color:#fff;text-decoration:none;">Ticketing</a>
              </div>
            </div>
            <div class="navlinks d-flex align-items-center">
              <%= form_with url: tickets_path, method: :get, local: true, class: 'd-none d-md-flex me-3' do %>
                <input type="text" name="q" class="form-control form-control-sm" placeholder="Search tickets"/>
              <% end %>
              <%= link_to 'Dashboard', root_path, class: 'btn btn-sm btn-outline-light me-1' %>
              <%= link_to 'Tickets', tickets_path, class: 'btn btn-sm btn-outline-light me-1' %>
              <%= link_to 'Companies', companies_path, class: 'btn btn-sm btn-outline-light me-1' %>
              <%= link_to 'Contacts', contacts_path, class: 'btn btn-sm btn-outline-light me-1' %>
            </div>
          </div>

  <div class="container">
    <% flash.each do |type, message| %>
      <% bs_class = { notice: 'alert-success', alert: 'alert-danger' }[type.to_sym] || 'alert-info' %>
      <div class="alert <%= bs_class %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <%= yield %>
          </div>

          <!-- Chatbot Widget -->
          <div id="chatbot-widget" class="chatbot-widget">
            <div id="chatbot-toggle" class="chatbot-toggle">
              <i class="fas fa-robot"></i>
            </div>
            <div id="chatbot-panel" class="chatbot-panel">
              <div class="chatbot-header">
                <h6 class="mb-0">
                  <i class="fas fa-robot me-1"></i>Assistant
                </h6>
                <button id="chatbot-close" class="btn btn-sm btn-outline-light">
                  <i class="fas fa-times"></i>
                </button>
              </div>
              <div id="chatbot-messages" class="chatbot-messages">
                <div class="chatbot-message bot-message">
                  <div class="message-content">
                    <i class="fas fa-robot me-1"></i>
                    Hi! How can I help you today?
                  </div>
                </div>
              </div>
              <div class="chatbot-input">
                <div class="input-group">
                  <input type="text" id="chatbot-input-field" class="form-control" placeholder="Type your message..." maxlength="500">
                  <button id="chatbot-send" class="btn btn-primary" type="button">
                    <i class="fas fa-paper-plane"></i>
                  </button>
                </div>
                <small class="text-muted">Press Enter to send</small>
              </div>
            </div>
          </div>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
          <%= javascript_include_tag "sidebar" %>
          <%= javascript_include_tag "chatbot" %>
        </body>
        </html>
