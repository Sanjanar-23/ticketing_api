<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 m-0">Companies</h1>
  <div class="d-flex align-items-center gap-2">
    <%= form_with url: companies_path, method: :get, local: true, class: 'd-flex' do %>
      <input type="text" name="q" value="<%= @q %>" class="form-control form-control-sm" placeholder="Search company name"/>
      <button class="btn btn-sm btn-outline-secondary ms-2" type="submit">Search</button>
    <% end %>
    <%= link_to 'New Company', new_company_path, class: 'btn btn-primary ms-2' %>
  </div>
  </div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Email</th>
      <th>Website</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |c| %>
      <tr>
        <td><%= link_to c.name, c %></td>
        <td><span class="badge text-bg-secondary"><%= c.company_code %></span></td>
        <td><%= c.email %></td>
        <td><%= c.website %></td>
        <td class="text-end">
          <%= link_to 'Edit', edit_company_path(c), class: 'btn btn-sm btn-outline-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
