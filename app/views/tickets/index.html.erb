<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 m-0">Tickets</h1>
  <div class="d-flex align-items-center gap-2">
    <%= form_with url: tickets_path, method: :get, local: true, class: 'd-flex' do %>
      <input type="text" name="q" value="<%= @q %>" class="form-control form-control-sm" placeholder="Search company, subject, issue"/>
      <button class="btn btn-sm btn-outline-secondary ms-2" type="submit">Search</button>
    <% end %>
    <%= link_to 'New Ticket', new_ticket_path, class: 'btn btn-primary ms-2' %>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Status</th>
      <th>Company</th>
      <th>Customer</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |t| %>
      <tr>
        <td><%= link_to t.subject, t %></td>
        <td><span class="badge <%= t.status == 'resolved' || t.status == 'closed' ? 'text-bg-success' : 'text-bg-warning' %>"><%= t.status %></span></td>
        <td><%= t.company_name %></td>
        <td><%= t.customer_name %></td>
        <td class="text-end">
          <%= link_to 'Edit', edit_ticket_path(t), class: 'btn btn-sm btn-outline-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
