<%= form_with model: @contact, html: { class: 'card p-3' } do |f| %>
  <div class="row g-3">
    <div class="col-md-6">
      <%= f.label :company_id, class: 'form-label' %>
      <%= f.number_field :company_id, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :user_id, class: 'form-label' %>
      <%= f.number_field :user_id, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :customer_name, class: 'form-label' %>
      <%= f.text_field :customer_name, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :phone, class: 'form-label' %>
      <%= f.text_field :phone, class: 'form-control' %>
    </div>
  </div>
  <div class="mt-3">
    <%= f.submit 'Save Contact', class: 'btn btn-primary' %>
  </div>
<% end %>
