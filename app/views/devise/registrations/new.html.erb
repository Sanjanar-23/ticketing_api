<div class="auth-card">
  <h1 class="auth-title">Create Account</h1>
  <p class="auth-subtitle">Join us and start managing your tickets</p>

  <% if alert %>
    <div class="auth-error">
      <i class="fas fa-exclamation-circle me-2"></i>
      <%= alert %>
    </div>
  <% end %>

  <% if notice %>
    <div class="auth-notice">
      <i class="fas fa-check-circle me-2"></i>
      <%= notice %>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="auth-form-group">
      <%= f.label :name, class: "auth-label" do %>
        <i class="fas fa-user me-2"></i>Full Name
      <% end %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "auth-input", placeholder: "Enter your full name" %>
    </div>

    <div class="auth-form-group">
      <%= f.label :email, class: "auth-label" do %>
        <i class="fas fa-envelope me-2"></i>Email Address
      <% end %>
      <%= f.email_field :email, autocomplete: "email", class: "auth-input", placeholder: "Enter your email" %>
    </div>

    <div class="auth-form-group">
      <%= f.label :password, class: "auth-label" do %>
        <i class="fas fa-lock me-2"></i>Password
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "auth-input", placeholder: "Create a password" %>
      <% if @minimum_password_length %>
        <small class="text-muted">
          <i class="fas fa-info-circle me-1"></i>
          <%= @minimum_password_length %> characters minimum
        </small>
      <% end %>
    </div>

    <div class="auth-form-group">
      <%= f.label :password_confirmation, class: "auth-label" do %>
        <i class="fas fa-lock me-2"></i>Confirm Password
      <% end %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input", placeholder: "Confirm your password" %>
    </div>

    <div class="auth-form-group">
      <%= f.submit "Create Account", class: "auth-button" %>
    </div>
  <% end %>

  <div class="auth-divider">
    <span>or</span>
  </div>

  <div class="auth-link">
    Already have an account?
    <%= link_to "Sign In", new_session_path(resource_name) %>
  </div>
</div>
